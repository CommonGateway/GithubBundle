{
    "$id": "https://opencatalogi.nl/milestone.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "version": "0.1.0",
    "title": "Milestone",
    "description": "A collection of related issues and pull requests.",
    "type": "object",
    "properties": {
        "url": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "html_url": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "labels_url": {
            "type": "string",
            "format": "uri",
            "required": true
        },
        "id": {
            "type": "integer",
            "required": true
        },
        "node_id": {
            "type": "string",
            "required": true
        },
        "number": {
            "type": "integer",
            "description": "The number of the milestone.",
            "required": true
        },
        "state": {
            "type": "string",
            "description": "The state of the milestone.",
            "enum": [
                "open",
                "closed"
            ],
            "default": "open",
            "required": true
        },
        "title": {
            "type": "string",
            "description": "The title of the milestone.",
            "required": true
        },
        "description": {
            "type": "string",
            "nullable": true
        },
        "creator": {
            "$ref": "https://opencatalogi.nl/simpleUser.schema.json"
        },
        "open_issues": {
            "type": "integer",
            "required": true
        },
        "closed_issues": {
            "type": "integer",
            "required": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "updated_at": {
            "type": "string",
            "format": "date-time",
            "required": true
        },
        "closed_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
        },
        "due_on": {
            "type": "string",
            "format": "date-time",
            "nullable": true
        }
    },
    "required": [
        "closed_issues",
        "id",
        "node_id",
        "labels_url",
        "html_url",
        "number",
        "open_issues",
        "state",
        "title",
        "url",
        "created_at",
        "updated_at"
    ]
}