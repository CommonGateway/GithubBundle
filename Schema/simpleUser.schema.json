{
    "$id": "https://opencatalogi.nl/simpleUser.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "version": "0.1.0",
    "title": "Simple User",
    "description": "A GitHub user",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "nullable": true  
        },
        "email": {
            "type": "string",
            "nullable": true
        },
        "login": {
            "type": "string",
            "required": true
        },
        "id": {
            "type": "integer",
            "required": true
        },
        "node_id": {
            "type": "string",
            "required": true
        },
        "avatar_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "gravatar_id": {
            "type": "string",
            "nullable": true
        },
        "url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "html_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "followers_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "following_url": {
            "type": "string",
            "required": true
        },
        "gists_url": {
            "type": "string",
            "required": true
        },
        "starred_url": {
            "type": "string"
        },
        "subscriptions_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "organizations_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "repos_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "events_url": {
            "type": "string",
            "required": true
        },
        "received_events_url": {
            "type": "string",
            "format": "url",
            "required": true
        },
        "type": {
            "type": "string",
            "required": true
        },
        "site_admin": {
            "type": "boolean",
            "required": true
        },
        "starred_at": {
            "type": "string",
            "required": true
        }
    }
}