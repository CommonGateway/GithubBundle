{
    "$id": "https://opencatalogi.nl/issue.schema.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "version": "0.1.0",
    "title": "List Repository Issues",
    "description": "Issues are a great way to keep track of tasks, enhancements, and bugs for your projects.",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer"
        },
        "node_id": {
            "type": "string"
        },
        "url": {
            "type": "string",
            "description": "URL for the issue",
            "format": "url"
        },
        "repository_url": {
            "type": "string",
            "format": "url"
        },
        "labels_url": {
            "type": "string"
        },
        "comments_url": {
            "type": "string",
            "format": "url"
        },
        "events_url": {
            "type": "string",
            "format": "url"
        },
        "html_url": {
            "type": "string",
            "format": "url"
        },
        "number": {
            "type": "integer",
            "description": "Number uniquely identifying the issue within its repository"
        },
        "state": {
            "type": "string",
            "description": "State of the issue; either 'open' or 'closed'"
        },
        "title": {
            "type": "string",
            "description": "Title of the issue"
        },
        "body": {
            "type": "string",
            "description": "Contents of the issue"
        },
        "user": {
          "$ref": "https://opencatalogi.nl/simpleUser.schema.json",
          "nullable": true
        },
        "labels": {
            "description": "Labels to associate with this issue; pass one or more label names to replace the set of labels on this issue; send an empty array to clear all labels from the issue; note that the labels are silently dropped for users without push access to the repository",
            "$ref": "https://opencatalogi.nl/labels.schema.json"
        },
        "assignee": {
            "$ref": "https://opencatalogi.nl/simpleUser.schema.json",
            "nullable":true
        },
        "assignees": {
          "$ref": "https://opencatalogi.nl/simpleUser.schema.json",
        },
        "milestone": {
            "$ref": "https://opencatalogi.nl/milestone.schema.json"
        },
        "locked": {
            "type": "boolean"
        },
        "active_lock_reason": {
            "type": "string",
            "nullable": true
        },
        "comments": {
            "type": "integer"
        },
        "pull_request": {
            "$ref": "https://opencatalogi.nl/simpleUser.schema.json"
        },
        "closed_at": {
            "type": "string",
            "format": "date-time",
            "nullable": true
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "updated_at": {
            "type": "string",
            "format": "date-time"
        },
        "closed_by": {
            "$ref": "https://opencatalogi.nl/schemas/simpleUser.schema.json",
            "nullable":true
        },
        "author_association": {
            "type": "string",
            "title": "author_association",
            "description": "How the author is associated with the repository.",
            "enum": [
                "COLLABORATOR",
                "CONTRIBUTOR",
                "FIRST_TIMER",
                "FIRST_TIME_CONTRIBUTER",
                "MANNEQUIN",
                "MEMBER",
                "NONE",
                "OWNER"
            ]
        },
        "state_reason": {
            "type": "string",
            "description": "The reason for the current state.",
            "nullable": true,
            "enum": [
                "completed",
                "reopened",
                "not_planned"
            ]
        }
    }
}